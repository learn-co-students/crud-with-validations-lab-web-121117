<h1>Editing <%= @song.title %></h1>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@song.errors.count, "error") %>
        prohibit this song from being saved
      </h2>
      <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div><br>
  <% end %>

  <%= form_for(@song) do |f| %>
    <label>Title:</label><br>
    <%= f.text_field :title %><br><br>

    <label>Artist Name:</label><br>
    <%= f.text_field :artist_name %><br><br>

    <label>Genre:</label><br>
    <%= f.text_field :genre %><br><br>

    <label>Released:</label><br>
    <%= f.check_box :released %> Click for True<br>

    <label>If song was released, put release date here:</label><br>
    <%= f.number_field :release_year %> <br>

    <%= f.submit "Update Song" %>
  <% end %>
